  <!-- DB Servlets -->
	<servlet>
		<servlet-name>dbServlet</servlet-name>
		<servlet-class>com.bkitmobile.poma.server.database.DatabaseServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>dbServlet</servlet-name>
		<url-pattern>/bkitpoma/db</url-pattern>
	</servlet-mapping>

  <!-- ReCaptcha Servlets -->
	<servlet>
		<servlet-name>recaptchaServlet</servlet-name>
		<servlet-class>com.bkitmobile.poma.server.captcha.RecaptchaServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>recaptchaServlet</servlet-name>
		<url-pattern>/bkitpoma/recaptcha</url-pattern>
	</servlet-mapping>
	
  <!-- Email To Admin -->
	<servlet>
		<servlet-name>MailServlet</servlet-name>
		<servlet-class>com.bkitmobile.poma.server.mail.MailServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MailServlet</servlet-name>
		<url-pattern>/bkitpoma/mail</url-pattern>
	</servlet-mapping>
	
  <!-- TrackerServler -->
	<servlet>
		<servlet-name>TrackerServlet</servlet-name>
		<servlet-class>com.bkitmobile.poma.server.TrackerServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TrackerServlet</servlet-name>
		<url-pattern>/bkitpoma/tracker</url-pattern>
	</servlet-mapping>
	
  <!-- Tracked Servlets -->
	<servlet>
		<servlet-name>MobileApi</servlet-name>
		<servlet-class>com.bkitmobile.poma.server.mobile.MobileApi</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MobileApi</servlet-name>
		<url-pattern>/api/mobile/</url-pattern>
	</servlet-mapping>
	
	<!--  JOID  -->
	<filter>
		<filter-name>OpenIdFilter</filter-name>
		<filter-class>org.verisign.joid.consumer.OpenIdFilter</filter-class>
		<init-param>
			<param-name>saveInCookie</param-name>
			<param-value>true</param-value>
			<description>Optional. Will store the identity url in a
				cookie under "openid.identity" if set to true.</description>
		</init-param>
		<!--
			<init-param> <param-name>cookieDomain</param-name>
			<param-value>www.mydomain.com</param-value> <description>Optional.
			Domain to store cookie based on RFC 2109. Defaults to current
			context.</description> </init-param>
		-->
	</filter>
	<filter-mapping>
		<filter-name>OpenIdFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!--  JOID -->

	<session-config>
		<session-timeout>1800</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>home.html</welcome-file>
		<welcome-file>home.jsp</welcome-file>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>